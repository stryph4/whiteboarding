<Window x:Class="WhiteBoading.Classes.HappyBirthday"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WhiteBoading.Classes"
        mc:Ignorable="d"
        Title="HappyBirthday" Height="375" Width="600">
    <Grid Background="Gray">
        <TextBlock x:Name="Text" HorizontalAlignment="Center" Margin="96,73,61,73" TextWrapping="Wrap" VerticalAlignment="Center" Height="198" Width="335" TextAlignment="Center" Text="No one stays the same age forever right? Unless you're Peter Pan or something.  Write another method called IncreaseAge() which increments the person's age by 1 year, and writes to the console &quot;Happy Birthday (name). You're now (age) years old! Hooray!&quot;"/>
        <Button x:Name="ShowAnswerButton" Content="Show Answer" HorizontalAlignment="Center" Margin="182,227,180,90" VerticalAlignment="Center" Width="130" Click="ShowAnswerButton_Click" Height="27"/>
        <Button x:Name="CloseButton" Content="Close" HorizontalAlignment="Center" Margin="181.5,259,179.5,58" VerticalAlignment="Center" Width="131" Click="CloseButton_Click" Height="27"/>

    </Grid>
</Window>
